<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>General Form</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Employee Card</a></li>
                    <li class="breadcrumb-item active">Create New Employee</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
