@model ApplicationUser
@{
    ViewData["Title"] = "Update";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Update Form</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Employee Card</a></li>
                    <li class="breadcrumb-item active">Update</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
@section JqueryUIStyle{
    <link href="~/plugins/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
}

<div class="container-fluid">

    <a asp-controller="UserManagement" asp-action="Update" class="btn btn-success">Return</a>

    <br /><br />

    <div class="row">
        <!-- left column -->
        <div class="col-xl-12">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Update @Model.UserName</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form asp-controller="UserManagement" asp-action="Update" method="post">
                    
                    <div asp-validation-summary="All" class="text-danger"></div>
                    
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="PasswordHash" />
                    <input type="hidden" asp-for="ConcurrencyStamp" />
                    <input type="hidden" asp-for="SecurityStamp" />
                    <input type="hidden" asp-for="IsAgree" />


                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="UserName">User Name</label>
                            <input type="text" asp-for="UserName" class="form-control" placeholder="Enter Employee Name ">
                            <span asp-validation-for="UserName" class="text-danger font-weight-bold"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">Employee Email</label>
                            <input type="text" asp-for="Email" class="form-control" placeholder="Enter Employee Email ">
                            <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
                        </div>
                    </div>


                    <div class="card-footer">
                        <center>
                            <input type="submit" value="Update" class="btn btn-primary" />
                            <input type="reset" value="Cancle" class="btn btn-success" />
                        </center>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
@section InputScript{
    <script src="~/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script>
        $(function () {
            bsCustomFileInput.init();
            $("#datepicker").datepicker();
        });
    </script>

}

@section jqueryValidation
        {
    <script src="~/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}


